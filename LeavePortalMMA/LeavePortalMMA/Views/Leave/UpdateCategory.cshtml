@model LeavePortalMMA.ViewModels.EditLeaveApplyViewModel

@{
    ViewBag.Title = "Apply Leaves";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Leave Applications</h1>
        <form class="needs-validation" novalidate="novalidate" action="/leave/UpdateCategory" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="LeaveReason">Leave Reasons</label>
                    <textarea class="form-control" id="LeaveReason" placeholder="Enter leave reason" name="LeaveText" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.LeaveText">@Model.LeaveText</textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter Leave reason.
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="drpCategory">Category</label>
                    <select class="form-control" id="drpCategory" name="CategoryID" required="required">
                        <option value="">Please Select</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.CategoryID">@item.CategoryName</option>
                        }



                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Category can't be empty
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="txtLeaveID">LeaveID</label>
                        @Html.HiddenFor(temp => temp.LeaveID)
                        <span>@Model.LeaveID</span>

                        <label for="txtUserID">UserID</label>
                        @Html.HiddenFor(temp => temp.UserID)
                        <span>@Model.UserID</span>
                    </div>
                    
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Leave</button>
            @Html.ValidationSummary()
        </form>
    </div>
</div>

<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }

</script>

